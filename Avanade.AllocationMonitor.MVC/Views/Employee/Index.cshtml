@model IEnumerable<Avanade.AllocationMonitor.MVC.Models.EmployeeListViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1><i class="fas fa-users"></i>  Gestione dei dipendenti</h1>

<p>
    <a asp-action="Create"><i class="fas fa-plus-circle fa-3x "></i></a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            @*<th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNascita)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mansione)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascita)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mansione)
                </td>
                <td>

                    <a asp-area="" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-search fa-2x"></i></a>
                    <a asp-area="" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen-square fa-2x"></i></a>
                    <a asp-area="" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt fa-2x"></i></a>
                    @*<a href="#" onclick="deleteEmployee(@item); return false;"><i class="fas fa-trash-alt fa-2x"></i></a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

